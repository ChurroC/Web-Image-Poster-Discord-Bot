{
    "name": "Image Poster",
    "description": "You can right click an image and send to your discord server.",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": ["storage", "activeTab", "scripting", "contextMenus"],
    "options_page": "options/options.html",
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "/images/reddit_discord16.png",
            "32": "/images/reddit_discord32.png",
            "48": "/images/reddit_discord48.png",
            "128": "/images/reddit_discord128.png"
        }
    },
    "icons": {
        "16": "/images/reddit_discord16.png",
        "32": "/images/reddit_discord32.png",
        "48": "/images/reddit_discord48.png",
        "128": "/images/reddit_discord128.png"
    }
}